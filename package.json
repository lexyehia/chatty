{
  "name": "react-simple-boilerplate",
  "version": "1.0.0",
  "description": "Simple and lightweight Boilerplate for ReactJS projects",
  "scripts": {
    "lint": "eslint --ext .jsx,.js src",
    "start": "npm-run-all --parallel client:run server:run",
    "compile": "tsc -p ./server",
    "client:run": "node ./client/server",
    "server:run": "node ./server/dist/app",
    "server:watch": "nodemon -e ts -w ./server/src -x npm run server:serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noahlotzer/react-simple-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "reload",
    "live",
    "edit",
    "webpack"
  ],
  "author": "Noah-Jerome Lotzer <n.lotzer@neusta.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/noahlotzer/react-simple-boilerplate/issues"
  },
  "homepage": "https://github.com/noahlotzer/react-simple-boilerplate",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.43",
    "@types/express": "^4.0.39",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.0.47",
    "@types/react": "^16.0.19",
    "@types/react-dom": "^16.0.2",
    "@types/superagent": "^3.5.6",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^3.2.0",
    "awesome-typescript-loader": "^3.2.3",
    "css-loader": "0.26.1",
    "eslint": "3.15.0",
    "eslint-plugin-react": "6.9.0",
    "morgan": "^1.9.0",
    "node-sass": "4.5.0",
    "npm-run-all": "^4.1.1",
    "sass-loader": "6.0.0",
    "sockjs-client": "^1.1.4",
    "source-map-loader": "^0.2.3",
    "style-loader": "0.13.1",
    "typescript": "^2.5.3",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.3.0"
  },
  "dependencies": {
    "express": "^4.16.2",
    "nodemon": "^1.12.1",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "ts-loader": "^3.1.1",
    "uuid": "^3.1.0",
    "ws": "^3.2.0"
  }
}
